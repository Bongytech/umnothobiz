# Create a template (committed)
cat > .env.example << 'EOF'
# Firebase Configuration
# NEVER commit actual values - use this as a template
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456
VITE_FIREBASE_MEASUREMENT_ID=G-ABC123DEF

# Other API Keys
VITE_STRIPE_PUBLIC_KEY=pk_test_123456
# VITE_STRIPE_SECRET_KEY=sk_test_123456  # Server-side only

# Instructions:
# 1. Copy this to .env.local
# 2. Fill in your actual values
# 3. NEVER commit .env.local to git
EOF

# Add to git
git add .env.example
