{
  "name": "umnotho",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "precommit": "npm run security",
    "lint": "eslint . --max-warnings 5",
    "lint:security": "eslint . --max-warnings 5",
    "security": "npm run lint:security && npm audit --audit-level=high",
    "security:ci": "npm run lint:security && npm audit --audit-level=critical",
    "test": "vitest run",
    "test:security": "vitest run --config vitest.security.config.ts",
    "deploy:staging": "firebase deploy --only hosting,functions --project staging",
    "deploy:production": "firebase deploy --only hosting,functions --project production",
    "security:report": "node scripts/security-monitor.js"
  },
  "dependencies": {
    "@google-pay/button-react": "^3.1.0",
    "fastify": "^5.0.0",
    "firebase": "^11.0.1",
    "google-pay-button": "github:google-pay/google-pay-button",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/firebase": "^2.4.32",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.16",
    "chalk": "^5.6.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "globals": "^15.11.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.0.1",
    "typescript": "~5.6.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  }
}
