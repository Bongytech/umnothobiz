{
  "name": "umnotho",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "precommit": "npm run security",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:security": "eslint . --config eslint.config.js --max-warnings 5",
    "security": "npm run lint:security && npm audit --audit-level=high",
    "security:ci": "npm run lint:security && npm audit --audit-level=critical",
    "test": "vitest run",
    "test:security": "vitest run --config vitest.security.config.ts",
    "deploy:staging": "firebase deploy --only hosting,functions --project staging",
    "deploy:production": "firebase deploy --only hosting,functions --project production",
    "security:report": "node scripts/security-monitor.js"
  },
  "dependencies": {
    "@google-pay/button-react": "^3.1.0",
    "fastify": "^5.0.0",
    "firebase": "^11.0.1",
    "google-pay-button": "github:google-pay/google-pay-button",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/firebase": "^2.4.32",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^6.4.1"
  }
}